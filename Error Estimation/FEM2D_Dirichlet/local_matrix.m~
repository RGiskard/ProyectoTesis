function M = local_matrix(coords)

M = zeros(3,3);

x1=coords(1,1);
x2=coords(2,1);
x3=coords(3,1);

y1=coords(1,2);
y2=coords(2,2);
y3=coords(3,2);

a = x2-x1;
b = x3-x1;
c = y2-y1;
d = y3-y1;

detB = a*d-b*c;

Q = (1/(detB*detB))*[ (d*d+b*b)  -(c*d)-(a*d) ; -c*d-a*b   c*c+a*a ];

v = [ 
for j=1:3
    for i=1:3
        
    end
end

